# Pickleball Platform Environment Variables
# Copy this file to .env.local and fill in your actual values
# For production deployment, ensure all secrets are properly configured

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# NextAuth.js configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-nextauth-key-generate-a-new-one"

# Alternative auth configuration names (used in some environments)
AUTH_URL="http://localhost:3000"
AUTH_SECRET="your-super-secret-nextauth-key-generate-a-new-one"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP server configuration for sending emails
EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
EMAIL_FROM="noreply@yourdomain.com"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment mode
NODE_ENV="development"

# Public environment identifier (shown to frontend)
NEXT_PUBLIC_APP_ENV="development"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CSRF protection secret
CSRF_SECRET="your-csrf-secret-change-in-production"

# =============================================================================
# DOCKER/DATABASE CONFIGURATION (for Docker deployments)
# =============================================================================
# PostgreSQL configuration (when using Docker)
POSTGRES_DB="pickleball"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-secure-postgres-password"

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.local for local development
# 2. Generate secure secrets for production:
#    - NEXTAUTH_SECRET: Use `openssl rand -base64 32`
#    - CSRF_SECRET: Use `openssl rand -base64 32`
#    - POSTGRES_PASSWORD: Use a strong, unique password
# 3. Configure your actual database connection in DATABASE_URL
# 4. Set up your SMTP server details for email functionality
# 5. Update NEXTAUTH_URL/AUTH_URL to match your deployment domain